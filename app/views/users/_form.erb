<%= form_for @user, url: form_submit_path do |f| %>

<p>
  <%= f.label :name %>:
  <%= f.text_field :name %>
</p>

<p>
  <%= f.label :address %>:
  <%= f.text_field :address %>
</p>

<p>
  <%= f.label :city %>:
  <%= f.text_field :city %>
</p>

<p>
  <%= f.label :state %>:
  <%= f.text_field :state %>
</p>

<p>
  <%= f.label :zip %>:
  <%= f.text_field :zip %>
</p>

<p>
  <%= f.label :email %>:
  <%= f.text_field :email %>
</p>

<!-- Address -->
<%= fields_for :addresses do |addresses_form| %>

<%= addresses_form.hidden_field :active, :value => true %>
<p>
  <%= addresses_form.label :street_address, "Street Address" %>
  <%= addresses_form.text_field :street_address, required: true %>
</p>

<p>
  <%= addresses_form.label :city %>
  <%= addresses_form.text_field :city, required: true %>
</p>

<p>
  <%= addresses_form.label :state %>
  <%= addresses_form.text_field :state, required: true %>
</p>

<p>
  <%= addresses_form.label :zip %>
  <%= addresses_form.text_field :zip, required: true %>
</p>

<p>
  <%= addresses_form.label :nickname, "Address Nickname" %>
  <%= addresses_form.text_field :nickname, value: "home",required: true %>
</p>

<% end %>

<p>
  <%= f.label :password %>:
  <%= f.password_field :password %>
</p>

<p>
  <%= f.label :password_confirmation %>:
  <%= f.password_field :password_confirmation %>
</p>

<p>
  <%= f.submit "Submit" %>
</p>
<% end %>
